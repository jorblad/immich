{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "argocd": {
    "managerFilePatterns": ["/k8s/.+\\.yaml$/"]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^k8s/.*\\.ya?ml$/",
        "/^k8s/.*\\.yaml$/",
        "/^charts/.+values\\.ya?ml$/"
      ],
      "matchStrings": [
        // single-line tag or with registry: org/name:tag
        "image:\\s*['\\\"]?(?<depName>(?:[A-Za-z0-9.-]+(?::\\d+)?/)?[A-Za-z0-9._/-]+):(?<currentValue>[^'\\\"\\s@]+)['\\\"]?",
        // digest form: org/name@sha256:...
        "image:\\s*['\\\"]?(?<depName>(?:[A-Za-z0-9.-]+(?::\\d+)?/)?[A-Za-z0-9._/-]+)@(?<currentValue>sha256:[0-9a-fA-F]+)['\\\"]?",
        // multi-line repository + tag under image:  (captures repository as depName and tag)
        "(?s)image:\\s*\\n(?:[ \\t]+(?:repository|repo):\\s*['\\\"]?(?<depName>(?:[A-Za-z0-9.-]+(?::\\d+)?/)?[A-Za-z0-9._/-]+)['\\\"]?.*?)*\\n[ \\t]*tag:\\s*['\\\"]?(?<currentValue>[^'\\\"\\s]+)['\\\"]?",
        // dotted single-line keys: image.repository: org/name  and image.tag: 1.2.3
        "image\\.repository:\\s*['\\\"]?(?<depName>(?:[A-Za-z0-9.-]+(?::\\d+)?/)?[A-Za-z0-9._/-]+)['\\\"]?\\s*\\n?\\s*image\\.tag:\\s*['\\\"]?(?<currentValue>[^'\\\"\\s]+)['\\\"]?"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "{{{depName}}}",
      "versioningTemplate": "docker"
    },

    // Example tag-only manager: matches tag under any nested image block,
    // but MUST be scoped to files/paths where you can supply the actual image name.
    {
      "customType": "regex",
      "managerFilePatterns": [
        // scope to specific values files / chart paths where tag-only occurs
        "/^charts/mychart/.+values\\.ya?ml$/"
      ],
      "matchStrings": [
        // match tag under an image block only if there is NO repository/repo line between image: and tag:
        "(?s)image:\\s*(?:(?![ \\t]+(?:repository|repo):)[\\s\\S])*?\\n[ \\t]*tag:\\s*['\\\"]?(?<currentValue>[^'\\\"\\s]+)['\\\"]?"
      ],
      // Replace the value below with the concrete image name for that file/path
      "depNameTemplate": "ghcr.io/immich-app/immich-server",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ]
}
